<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextIcon">

    <include
        android:id="@+id/layout_search_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_search_conditions" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout_search_conditions">

        <com.lianzong.logistics.app.ui.view.pulltorefresh.XListView
            android:id="@+id/lv_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"/>

        <com.lianzong.logistics.app.ui.view.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_menu"
            fab:fab_colorNormal="@color/colorNormal"
            fab:fab_colorPressed="@color/colorPressed"
            fab:fab_colorRipple="@color/colorRipple"/>
    </FrameLayout>
</RelativeLayout>