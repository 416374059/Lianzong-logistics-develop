<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextIcon"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/layout_search_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_search_conditions" />

    <com.lianzong.logistics.app.ui.view.pulltorefresh.XListView
        android:id="@+id/lv_goods"
        android:layout_below="@id/layout_search_conditions"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"/>
</RelativeLayout>